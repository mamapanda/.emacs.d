[module/battery]
type = internal/battery
; ls -l /sys/class/power_supply/
battery = BAT0
adapter = AC
full-at = 98

; format-charging = <animation-charging> <label-charging>
format-charging = <ramp-capacity> <label-charging>
; format-charging-prefix = " "
