[colors]
background = ${xrdb:polybar.background}
background-alt = ${xrdb:polybar.background-alt}
foreground = ${xrdb:polybar.foreground}
primary = ${xrdb:polybar.primary-color}
alert = ${xrdb:polybar.alert-color}

[bar/main]
; bottom = true
width = 100%
height = 27
radius = 0

fixed-center = true

line-size = 4

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Droid Sans Mono:style=regular:pixelsize=11
font-1 = Droid Sans Fallback:style=regular:pixelsize=11
font-2 = Iosevka Nerd Font:style=regular:antialias=true

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

modules-left = wireless-network xbacklight alsa
modules-center = bspwm-desktops
modules-right = bspwm-info memory cpu battery date

[module/bspwm-desktops]
type = internal/bspwm

format = <label-state>

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.background-alt}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.background}
label-empty-padding = 2

[module/bspwm-info]
type = internal/bspwm

format = <label-mode>
label-monocle = 
label-tiled = 擄
label-fullscreen = 
label-floating = 
label-pseudotiled = 益
label-locked = 
label-sticky = 
label-private = 
label-marked = פֿ

[module/xbacklight]
type = internal/xbacklight

format = <bar>
format-prefix = "ﯦ "

bar-width = 10
bar-indicator = 
bar-indicator-foreground = ${colors.foreground}
bar-fill = ━
bar-fill-foreground = ${colors.primary}
bar-empty = ━
bar-empty-foreground = ${colors.foreground}

[module/alsa]
type = internal/alsa

format-volume = <bar-volume>
format-volume-prefix = "墳 "

format-muted = <label-muted>
format-muted-prefix = "ﱝ "
label-muted = muted

bar-volume-width = 10
bar-volume-indicator = 
bar-volume-fill = ━
bar-volume-fill-foreground = ${colors.primary}
bar-volume-empty = ━
bar-volume-empty-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = %Y-%m-%d
time = %H:%M
label = %date% %time%

[module/wireless-network]
type = internal/network
; ip route | grep '^default' | awk '{print $5}' | head -n1
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = "直 "
label-connected = %essid%

format-disconnected = <label-disconnected>
format-disconnected-prefix = "睊 "
label-disconnected = disconnected

[module/memory]
type = internal/memory
interval = 2

format = <label>
format-prefix = " "
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2

format = <label>
format-prefix = " "
label = %percentage%%

[module/battery]
type = internal/battery
; ls -l /sys/class/power_supply/
battery = BAT0
adapter = AC
full-at = 98

format-charging = <ramp-capacity> <label-charging>
label-charging = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full = <ramp-capacity> <label-full>
label-full = %percentage%%

; ramp-capacity-0 = 
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
